<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="theknife.controllers.LoginController"
            styleClass="main-container">
    
    <!-- Header con logo -->
    <top>
        <HBox styleClass="navbar">
            <HBox spacing="8" alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
                <Text text="The" styleClass="logo-text"/>
                <Text text="Knife" styleClass="logo-text,logo-accent"/>
            </HBox>
        </HBox>
    </top>
    
    <center>
        <VBox alignment="CENTER" spacing="24" style="-fx-padding: 50;">
            <!-- Card di login -->
            <VBox alignment="CENTER" spacing="20" styleClass="card" style="-fx-max-width: 400; -fx-pref-width: 400;">
                <Text text="Accedi al tuo account" styleClass="subtitle" style="-fx-text-alignment: center;"/>
                
                <VBox spacing="16" style="-fx-padding: 20 0;">
                    <VBox spacing="8">
                        <Label text="Username:" styleClass="heading"/>
                        <TextField fx:id="usernameField" promptText="Inserisci il tuo username" 
                                 style="-fx-pref-width: 350; -fx-font-size: 16px;"/>
                    </VBox>
                    
                    <VBox spacing="8">
                        <Label text="Password:" styleClass="heading"/>
                        <PasswordField fx:id="passwordField" promptText="Inserisci la tua password" 
                                     style="-fx-pref-width: 350; -fx-font-size: 16px;"/>
                    </VBox>
                </VBox>
                
                <VBox spacing="12" style="-fx-padding: 10 0;">
                    <Button text="Accedi" styleClass="button,primary" 
                            style="-fx-pref-width: 350; -fx-font-size: 16px; -fx-padding: 12 20;" 
                            onAction="#handleLogin"/>
                    <Button text="Registrati" styleClass="button" 
                            style="-fx-pref-width: 350; -fx-font-size: 16px; -fx-padding: 12 20;" 
                            onAction="#handleRegistrazione"/>
                </VBox>
                
                <Label fx:id="errorLabel" styleClass="error" style="-fx-font-size: 14px;"/>
            </VBox>
        </VBox>
    </center>
</BorderPane>