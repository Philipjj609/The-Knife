<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
      fx:controller="theknife.controllers.UserMenuController"
      spacing="10" style="-fx-padding: 20; -fx-alignment: center;">
    
    <Label fx:id="usernameLabel" text="Username" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
    <Label fx:id="roleLabel" text="Ruolo" style="-fx-font-size: 12; -fx-text-fill: #666;"/>
    
    <Separator/>
    
    <Button text="Logout" onAction="#handleLogout" 
            style="-fx-pref-width: 150; -fx-background-color: #e74c3c; -fx-text-fill: white;"/>
    
</VBox>